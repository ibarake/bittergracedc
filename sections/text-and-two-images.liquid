{{ 'text-and-two-images.css' | asset_url | stylesheet_tag }}
<section>
  <div class="txt-two-image-container">
    <div class="two-image-text">
      <h1>
        {% if product.metafields.custom.title %}
          {{ product.metafields.custom.title }}
        {% else %}
          {{ section.settings.title }}
        {% endif %}
      </h1>
      <p>
        {% if product.metafields.custom.under_title %}
          {{ product.metafields.custom.under_title }}
        {% else %}
          {{ section.settings.paragraph }}
        {% endif %}
      </p>
    </div>
    <div class="images-container">
      {% if product.metafields.custom.product_image_2.value %}
        {{ product.metafields.custom.product_image_2.value | media_tag: width: 200, height: 200 }}
      {% else %}
        {{ section.settings['left-image'] | media_tag: width: 200, height: 200 }}
      {% endif %}

      {% if product.metafields.custom.product_image_3.value %}
        {{ product.metafields.custom.product_image_3.value | media_tag: width: 200, height: 200 }}
      {% else %}
        {{ section.settings['right-image'] | media_tag: width: 200, height: 200 }}
      {% endif %}
    </div>
  </div>
  <hr id="line-gray">
</section>
{% schema %}
{
  "name": "Text and two image",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "default": "Title",
        "label": "Title"
      },
    {
        "type": "textarea",
        "id": "paragraph",
        "label": "paragraph",
        "default": "paragraph"
      },
    {
      "type": "image_picker",
      "id": "left-image",
      "label": "Left image"
    },
    {
      "type": "image_picker",
      "id": "right-image",
      "label": "Right image"
    },
    {
  "type": "video",
  "id": "video1",
  "label": "A Shopify-hosted video"
},
    {
  "type": "video",
  "id": "video2",
  "label": "A Shopify-hosted video"
},
    {
  "type": "select",
  "id": "left-media-type",
  "label": "Left Media Type",
  "options": [
    { "value": "image", "label": "Image" },
    { "value": "video", "label": "Video" }
  ],
  "default": "image"
},
{
  "type": "select",
  "id": "right-media-type",
  "label": "Right Media Type",
  "options": [
    { "value": "image", "label": "Image" },
    { "value": "video", "label": "Video" }
  ],
  "default": "image"
}

  ],
  "presets": [
    {
      "name": "text and two images"
    }
  ]
}
{% endschema %}
