<secction>
  <div class="txt-two-image-container">
    <div class="two-image-text">
      <h1>{{ product.metafields.custom.title }}</h1>
      <p>{{ product.metafields.custom.under_title }}</p>
    </div>
   <div class="images-container"> 
    <img src="{{ product.metafields.custom.product_image_2.value | image_url }}" alt="Left Image" width="200" height="200">
    <img src="{{ product.metafields.custom.product_image_3.value | image_url }}" alt="Right Image" width="200" height="200">
</div>

  </div>
  <hr id="line-gray">
</secction>
{% schema %}
{
  "name": "Text and two image",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "default": "Title",
        "label": "Title"
      },
    {
        "type": "textarea",
        "id": "paragraph",
        "label": "paragraph",
        "default": "paragraph"
      },
    {
  "type": "image_picker",
  "id": "left-image",
  "label": "Left image"
},
      {
  "type": "image_picker",
  "id": "right-image",
  "label": "right image"
}
  ]
}
{% endschema %}
